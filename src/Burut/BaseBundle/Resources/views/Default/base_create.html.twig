{% extends "@BurutBase/layout.html.twig" %}
{% set user = base.user %}
{% block content %}
    <div style="padding-left: 50px; padding-top: 50px;">
        <b>{{ base.title }}</b> Database setting
        <br/>
        <div>Configuration&nbsp|&nbsp<a href="{{ path("_base_edit_fields", {id: base.id}) }}">Fields</a></div>
        <form method="post" action="{{ path("_base_edit", {id: base.id}) }}">
            <table>
                <tr>
                    <td>Name:</td>
                    <td><input name="title" type="text" value="{{ base.title }}" /></td>
                </tr>
                <tr>
                    <td>Color:</td>
                    <td>
                        {% for color in colors %}
                        <label>
                            <div style="float: left; height: 21px; width: 21px; background-color:{{ color }};">
                                <input type="radio" name="color" value="{{ color }}" {{ color == base.color ? 'checked' : 'zzz' }}></div>
                        </label>
                        {% endfor %}
                    </td>
                </tr>
            </table>
            <input type="submit" value="Save changes">
        </form>
        <a href="{{ path("_home") }}">Back to list</a>
    </div>
{% endblock %}